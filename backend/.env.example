# mateoX Configuration
# Copy this file to .env and adjust values

# Application
PROJECT_NAME=mateoX
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database (SQLite for development)
DATABASE_URL=sqlite+aiosqlite:///./mateox.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://mateox:mateox@localhost:5432/mateox

# JWT Secret (change in production!)
SECRET_KEY=dev-secret-key-change-me-in-production

# Redis & Celery (optional â€” App funktioniert auch ohne)
# CELERY_ENABLED=       # leer = Auto-Detect, true/false = explizit setzen
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Execution
RUNNER_TYPE=auto
DEFAULT_TIMEOUT_SECONDS=3600
MAX_PARALLEL_RUNS=4

# Docker (set to true if Docker is available)
DOCKER_AVAILABLE=false
DOCKER_DEFAULT_IMAGE=python:3.12-slim

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
